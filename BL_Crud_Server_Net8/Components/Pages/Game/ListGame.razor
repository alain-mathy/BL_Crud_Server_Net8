@page "/listgame"
@using BL_Crud_Server_Net8.Entities
@using BL_Crud_Server_Net8.Implementation.Interfaces
@inject IGameService GameService
@inject NavigationManager NavMan

<h3>Video Games</h3>

<table class="table">
    <thead>
        <tr>
            <th>Game</th>
            <th>Developer</th>
            <th>Release</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var game in games)
        {
            <tr>
                <td>@game.Name</td>
                <td>@game.Developer</td>
                <td>@game.Release?.ToShortDateString()</td>
                <td>
                    <button class="btn btn-primary"
                            @onclick="(() => EditGame(game.Id))">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                            <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325" />
                        </svg>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
<button class="btn btn-primary" @onclick="CreateGame">Create New Game</button>

@code {
    List<Game> games = new();
    protected override async Task OnInitializedAsync()
    {
        games = await GameService.GetAllGames();
    }

    void EditGame(int id)
    {
        NavMan.NavigateTo($"editgame/{id}");

    }
    void CreateGame()
    {
        NavMan.NavigateTo("editgame");
    }
}